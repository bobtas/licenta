@model cautsalon.Models.Servicii

@{
    ViewData["Title"] = "Eliminare servicii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Esti sigur ca vrei sa stergi acest serviciu?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Denumire)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Denumire)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pret)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pret)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cod_serviciu" />
        <input type="submit" value="Sterge" class="btn btn-sm btn-danger" /> |
        <a asp-action="Index" class="btn btn-sm btn-primary">Inapoi la serviciile mele</a>
    </form>
</div>
