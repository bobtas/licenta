@model IEnumerable<cautsalon.Models.Firme>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cui)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registrul_comertului)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cui)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registrul_comertului)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cod_firma">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cod_firma">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cod_firma">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
