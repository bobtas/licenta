<!DOCTYPE html>
<html lang="en" style="background:#f9f9f9 !important;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Caut Salon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body style="background: #f9f9f9 !important;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background: #e2f6ff !important;">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/images/salon.png" title="CautSalon" alt="" />
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole("salonowner"))
                            {
                                
                            <li class="nav-item">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color: green;border-color: #f9f9f9;color: #e2f6ff;"
                                       href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Management salon
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-area="" asp-controller="Saloanes" asp-action="Index"><i class="fa fa-fw fa-home" style="color:green;"></i>Salonul meu</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="servicii" asp-action="Index"><i class="fa fa-fw fa-barcode" style="color:green;"></i>Servicii</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="programari" asp-action="Index"><i class="fa fa-fw fa-clock" style="color:green;"></i>Programari</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="rapoarte" asp-action="Index"><i class="fa fa-fw fa-file-excel" style="color:green;"></i>Rapoarte</a>
                                    </div>
                                </div>                                
                            </li>
                                
                                }
                                else
                                {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="programari" asp-action="Index"><i class="fa fa-fw fa-clock" style="color:green;"></i>Programari</a>
                                </li>
                                }

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="despre_noi" asp-action="Index"><i class="fa fa-fw fa-address-card" style="color:green;"></i>Despre noi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="faq" asp-action="Index"><i class="fa fa-fw fa-question" style="color:green;"></i>FAQ</a>
                                </li>

</ul>
                       
                    </div>
                </div>
            }
            else
            {
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="despre_noi" asp-action="Index"><i class="fa fa-fw fa-address-card" style="color:green;"></i>Despre noi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="faq" asp-action="Index"><i class="fa fa-fw fa-question" style="color:green;"></i>FAQ</a>
                            </li>
                        </ul>
                        <partial name="_AisalonPartial" />
                    </div>
                </div>

            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background: #e2f6ff !important;">
        <partial name="_CookieConsentPartial" />
        <div class="container">
            &copy; 2020 - Caut Salon - <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Confidentialitate</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
